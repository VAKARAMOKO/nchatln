<div class="column is-half">
  <% if user_signed_in? %>
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
			<img src="https://bulma.io/images/placeholders/128x128.png">
			</p>
		</figure>
		<div class="media-content">
			 <%= render 'questions/form' %>
		</div>
	</article>
  <% end %>


<% @questions.each do | question | %>
  <div class="box">
  	<article class="media">
  		<div class="media-left">
  			<figure class="image is-64x64 is-rounded">
  				<img src="https://bulma.io/images/placeholders/128x128.png">
  			</figure>
  		</div>
  		<div class="media-content">
  			<div class="content">
  				<strong><%= question.user.email %></strong><br />
  				<small><%= question.user.email %></small><br/>
  				<p><%= question.question %></p>
  			</div>
        <% if user_signed_in? && current_user.id == question.user_id %>
  			<nav class="level">
  				<div class="level-left is-mobile">
  					<%= link_to question, class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to edit_question_path(question), class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to question, method: :delete, data: { confirm: "Are you sure you want to delete this question?" } do %>
  							<span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
  					<% end %>
  				</div>
  			</nav>
        <% end %>
  		</div>
  	</article>
  </div>
<% end %>
</div>