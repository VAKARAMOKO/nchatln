<!DOCTYPE html>
<html>
  <head>
    <title>Chatln</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--system de notification devise/!-->
  <% if flash[:notice] %>
    <div class="notification is-primary global-notification">
      <p class="notice"><%= notice %></p>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="notification is-danger global-notification">
      <p class="alert"><%= alert %></p>
    </div>
  <% end %>

  <!--navigation system /!-->
  <nav class="navbar is-info is-fixed">
    <div class="navbar-brand">
      <%= link_to root_path, class: "navbar-item" do %>
        <h1 class="title is-5">
          <span style="color: "blue>C</span>
          <span style="color: white">h</span>
          <span style="color: ">a</span>
          <span style="color: red">t</span>
          <span style="color: ">L</span>
          <span style="color: yellow">n</span>
        </h1>
      <% end %>
      <div class="navbar-burger burger" data-target="navbarExample">
          <span></span>
          <span></span>
          <span></span>
      </div>
     </div>

      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
              
              <% if user_signed_in? %>
              
                <p class="control">
                   <!-- remplacer emails par le nom ou profil/!-->
                  <%= link_to current_user.email, edit_user_registration_path, class: "button is-info" %>
                </p>
                
                <p>
                  <%= link_to "DÃ©connexion", destroy_user_session_path, method: :delete, class:"button is-info" %>
                </p>
              <% else %>
                <p class="control">
                  <%= link_to 'Se Connecter', new_user_session_path, class: "button is-info" %>
                </p>
               
                <p class="control">
                  <%= link_to 'CrÃ©er un Compte', new_user_registration_path, class: "button is-info" %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </nav>


    <%= yield %>


  </body>
</html>
